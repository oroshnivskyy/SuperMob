<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" id="form_registr" role="form">
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.username) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    {% if form_errors(form.username) %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">{{ form_errors(form.username) }}</div>
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    {% if form_errors(form.email) %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">{{ form_errors(form.email) }}</div>
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.plainPassword.first) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    {% if form_errors(form.plainPassword.first) %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">{{ form_errors(form.plainPassword.first) }}</div>
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.plainPassword.second) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    {% if form_errors(form.plainPassword.second) %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">{{ form_errors(form.plainPassword.second) }}</div>
            </div>
        </div>
    {% endif %}
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.country) }}
        </div>
        <div class="col-md-6">
            {{ form_widget(form.country) }}
        </div>
    </div>
    <div class="form-group row" style="display: none;">
        {{ form_widget(form.operator, { 'attr': {'style': 'display: none'} }) }}
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            {{ form_label(form.operator) }}
        </div>
        <div class="col-md-6">
            <select id="operators" required="required" onchange="operator.setOperator();" class="form-control"></select>
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-group row">
        <div class="col-md-12">
            <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default"/>
        </div>
    </div>
</form>
