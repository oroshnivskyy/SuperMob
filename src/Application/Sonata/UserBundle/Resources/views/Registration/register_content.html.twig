<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register" id="form_registr">
    {#{{ form_widget(form.country, { 'attr':{'onclick':'operator.setOperator()'} }) }}#}
    {#{{ form_widget(form.country, {'attr': {'class': 'task_field'}}) }}#}
    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword) }}
    {{ form_row(form.country) }}
    <div>
        {{ form_widget(form.operator, { 'attr': {'style': 'display: none'} }) }}
    </div>
    <div>
        <label>Оператор</label>
        <select id="operators" required="required" onchange="operator.setOperator();">

        </select>
    </div>
    {{ form_rest(form) }}
    <div>
        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary"/>
    </div>
</form>
