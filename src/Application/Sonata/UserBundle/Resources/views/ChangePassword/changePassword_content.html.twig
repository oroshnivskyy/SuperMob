<div class="container marketing">
    <div class="row featurette">
        <div class="col-md-3">
            {{ form_errors(form) }}

            {#{% form_theme form _self %}#}

            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                <div class="control-group">
                    {{ form_errors(form.current_password) }}
                    {{ form_label(form.current_password, 'Текущий пароль', {'attr': {'class': 'control-label'}}) }}
                    <div class="controls">{{ form_widget(form.current_password) }}</div>
                </div>
                <div class="control-group">
                    {{ form_errors(form.new) }}
                    <div class="controls">{{ form_widget(form.new) }}</div>
                </div>

                {{ form_rest(form) }}
                <input type="submit" name="submit"  class="btn btn-primary" value="{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}" />
            </form>
        </div>
    </div>
</div>