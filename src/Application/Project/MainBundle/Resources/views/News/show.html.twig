{% extends '::base.html.twig' %}
{% block body %}
    {{ render(controller('MainBundle:PageLayout:Slider')) }}
    <div class="container marketing">
        <div class="row featurette">
            <div class="col-md-12">
                <h2 class="" style="margin-top: 0px;">{{ entity.title }}</h2>
                <div style="display: block; width: 100%;">
                    <span style="font-size: 12px;">Категория: <b>{{ entity.newsCategory.name }}</b></span>
                    <span style="font-size: 12px;">Дата создания: <b>{{ entity.pubDate|date('d.m.Y') }}</b></span>
                </div>
                <hr class="featurette-divider" style="margin-bottom: 20px; margin-top: 0px;"/>
                <p class="">{{ entity.text|raw }}</p>
            </div>
            {#<div class="col-md-5">#}
            {#<img class="featurette-image img-responsive" src="data:image/png;base64," data-src="holder.js/500x500/auto" alt="Generic placeholder image">#}
            {#</div>#}
        </div>
    </div>
{% endblock %}