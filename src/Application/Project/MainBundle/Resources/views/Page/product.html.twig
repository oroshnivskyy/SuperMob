{% extends '::base.html.twig' %}
{% block body %}
    <div class="container marketing">
        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading" style="margin-top: 0px;">{{ entity.name }}</h2>
                {% if is_granted("ROLE_USER") %}
                    <p class="lead">{{ entity.bigText }}</p>
                {% else %}
                    <p class="lead">{{ entity.shortText }}</p>
                {% endif %}
            </div>
            <div class="col-md-5">
                {% if entity.image is null %}
                    <img class="featurette-image img-responsive" src="data:image/png;base64," data-src="holder.js/500x500/auto" alt="Generic placeholder image">
                {% else %}
                    <img class="featurette-image img-responsive" src="{{ webPathContent }}/{{ entity.image }}" alt="{{ entity.name }}">
                {% endif %}
            </div>
        </div>
        <hr class="featurette-divider">
    </div>
{% endblock %}